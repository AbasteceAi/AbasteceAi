<legend>SearchCounty</legend>

<%= form_tag("/searcher", method: "get") do %>
	<h2 id = "title-form">Pesquisar Município</h2>
		<div id="state-group">
		<%= label_tag(:state_searched, "Estado") %>
		<%= text_field_tag 'state_searched', nil, placeholder: "Nome do Estado", :required => true %>
	</div>
 	<div id="county-group">
		<%= label_tag(:county_searched, "Município") %>
		<%= text_field_tag 'county_searched', nil, placeholder: "Nome do Município", :required => true %>
	</div>
	<%= submit_tag("Pesquisar", class: "btn btn-success") %>
<% end %>
         
  <table class="table table-responsive">
  <thead>
    <th>Combustivel</th>
    <th>Preço minimo</th>		
    <th>Preço médio</th>
    <th>Preço Maximo</th>
    <th>Número de postos pesquisados</th>
    <th>Data da Pesquisa</th>
  </thead>

<% @fuel.each do |fuel_atributes| %>


  <tbody>
    <td><%= fuel_atributes.fuel_type.type_name %></td>

	<td><%= fuel_atributes.min_resale_price %></td>

	<td><%= fuel_atributes.medium_resale_price %></td>

	<td><%= fuel_atributes.max_resale_price %></td>
 
	<td><%= fuel_atributes.number_of_gas_station %></td>

	<td><%= @date%></td>
  </tbody>

<% end %>

</table>



